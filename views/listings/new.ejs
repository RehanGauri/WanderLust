<% layout("layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Create a New Listing</h3>

    <form method="post" action="/listings" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" class="form-control" placeholder="Title" required>
            <div class="valid-feedback">Title looks good!</div>
            <div class="invalid-feedback">Please enter short title</div>
        </div>
        <!-- using listing[..] object create kardeta hai and title uska key hai and value jo denge -->
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" placeholder="Description" required></textarea>
            <div class="valid-feedback">Description looks good!</div>
            <div class="invalid-feedback">Please enter valid Description</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="text" name="listing[image]" class="form-control" placeholder="enter image url/link">
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listing[price]" class="form-control" placeholder="1299" required>
                <div class="valid-feedback">Price looks good!</div>
                <div class="invalid-feedback">Please enter valid price</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" class="form-control" placeholder="India">
                <div class="valid-feedback">Country looks good!</div>
                <div class="invalid-feedback">Please enter valid Country</div>
            </div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" class="form-control" placeholder="Jaipur, Rajasthan" required>
            <div class="valid-feedback">Location looks good!</div>
            <div class="invalid-feedback">Please enter valid location</div>
        </div>


        <button class="btn btn-dark add-btn">Add</button>
        
    </form>        
</div>
    </div>
